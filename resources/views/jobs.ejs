

<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8 px-6" id="all_food">Jobs for Specially-Abled Persons</h1>
  <div class="row" style=" width: 70%; margin-top: 5px; display: flex; padding-left: 20px;">
    <% jobs.forEach(function(job){ %>
      <div class="card col-lg-4 col-md-6" style="border: 2px solid black; margin: 5px;">
        <h6 style="text-align: center; border-bottom: 2px solid black;"><%=job.CompanyName%></h6>
        <p style="margin-left: 10px;">Job Description:-</p>
        <p style="margin-left: 10px;"><%=job.Job_Description%></p>
    
        <button style="padding: 10px; border: 2px solid red; margin: 5px; text-align: center;">Role:- <a href=<%=job.Link%> target="_blank"><%=job.Role%></a></button>
    
      </div>
    <% }) %>
  </div>
</section>

