<section class="login flex justify-center pt-10 ">
    <div class="w-full max-w-xxl">
        <h1 style="padding-bottom: 20px; font-weight: 800; padding-left: 10px; font-size: 30px;text-align: center;user-select: none;">Add Jobs for Specially Abled persons</h1>
        <form action="/addJobs" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                   Company Name
                </label>
                <input name="CompanyName" value="<%= messages.name  %>"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" type="text" placeholder="Enter your Company Name"/>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                    Job Description
                </label>
                <textarea name="Job_Description" value="<%= messages.email  %>"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" type="text" placeholder="Enter your Job Description"></textarea>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    Role
                </label>
                <input name="Role"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="text" placeholder="Enter the Role"/>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    Link
                </label>
            <input name="Link"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="text" placeholder="Enter the Link"/>
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="btn-primary  text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit" style="padding: 5px 20px 5px 20px;">
                    Add
                </button>
            
            </div>
        </form>
    </div>
</section>